<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE topic PUBLIC "-//OASIS//DTD LIGHTWEIGHT DITA Topic//EN" "lw-topic.dtd">
<topic id="program-bulbs-to-groups">
  <title>Test File: Media Elements in XDita</title>
  <body>

    <section outputclass="demo">
      <title>
        Video Element
      </title>
      <fig>
        <video outputclass="videoElement" width="320" height="240" controls="true" tabindex="1">
          <desc>Kool-Aid Commercial, Debut of Pitcher Man</desc>
          <video-poster href="https://upload.wikimedia.org/wikipedia/commons/thumb/7/74/1954_Kool-Aid_Commercial._Debut_of_Pitcher_Man.webm/120px--1954_Kool-Aid_Commercial._Debut_of_Pitcher_Man.webm.jpg" />
          <media-source href="https://upload.wikimedia.org/wikipedia/commons/7/74/1954_Kool-Aid_Commercial._Debut_of_Pitcher_Man.webm" />
        </video>
      </fig>
    </section>

    <section>
      <title>Audio Element</title>
      <note type="note">
        <audio outputclass="audioElement" controls="true" tabindex="1">
          <desc>An Audio Track</desc>
          <fallback>
            <p>Sorry, the audio could not be played.</p>
          </fallback>
          <media-source href="https://upload.wikimedia.org/wikipedia/commons/a/aa/1943_Nov_14_NYPhil_Bernstein.ogg" format="application/ogg"/>
        </audio>
      </note>
    </section>

    <section>
      <title>An Image</title>
      <fig>
        <image outputclass="imageElement" height="300" width="300" href="https://placehold.co/300x300" scope="external">
          <alt>A Placeholder</alt>
        </image>
      </fig>
    </section>
  </body>
</topic>
