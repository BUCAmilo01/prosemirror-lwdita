<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE topic PUBLIC "-//OASIS//DTD LIGHTWEIGHT DITA Topic//EN" "lw-topic.dtd">
<topic id="program-bulbs-to-groups">
  <title>Test File: Media Elements in XDita</title>
  <body>

    <section outputcalss="demo">
      <title>
        Video Element
      </title>
      <fig>
        <video outputclass="videoElement" width="640" height="360" autoplay="false" muted="false" controls="true">
          <desc outputclass="videoElementDescriptor">Xiaomi Yeelight YLDP06YL Smart Light Bulb White</desc>
          <video-poster href="https://upload.wikimedia.org/wikipedia/commons/thumb/7/74/1954_Kool-Aid_Commercial._Debut_of_Pitcher_Man.webm/120px--1954_Kool-Aid_Commercial._Debut_of_Pitcher_Man.webm.jpg" />
          <media-source href="https://commons.wikimedia.org/wiki/File:1954_Kool-Aid_Commercial._Debut_of_Pitcher_Man.webm" />
        </video>
        </fig>
    </section>

    <section>
      <title>Audio Element</title>
      <note>
        <audio outputclass="audioElement" autoplay="false" controls="true" loop="false" muted="false" tabindex="1">
          <desc outputclass="audioElementDescriptor">An Audio Track</desc>
          <media-source href="https://commons.wikimedia.org/wiki/File:1943_Nov_14_NYPhil_Bernstein.ogg" format="ogg/vorbis"/>
          <fallback>
            <p>Sorry, the audio could not be played.</p>
          </fallback>
        </audio>
      </note>
    </section>

    <section>
      <title>An Image</title>
      <fig>
        <image outputclass="imageElement" height="300" width="300" href="https://placekitten.com/300/300">
          <alt>A kitten</alt>
        </image>
      </fig>
    </section>
  </body>
</topic>
